{
  "name": "@sanity/sanitype",
  "version": "0.3.1",
  "description": "Experimental TypeScript-first schemas for Sanity",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/sanity-io/sanitype.git"
  },
  "license": "MIT",
  "author": "Bjørge Næss <bjoerge@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "run-s pkg:build pkg:check",
    "check": "npm-run-all --serial clean pkg:build --parallel typecheck lint test pkg:check",
    "clean": "rimraf dist",
    "coverage": "vitest run --coverage",
    "dev": "run-p pkg:watch typecheck:watch test:watch",
    "example:studio": "(cd examples/studio && npm run dev)",
    "examples": "run-p example:*",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint . --ext .cjs,.js,.ts,.tsx --quiet",
    "pkg:build": "pkg build --strict",
    "pkg:check": "pkg check --strict",
    "pkg:watch": "pkg watch --strict",
    "prepublishOnly": "npm run build",
    "test": "vitest run --typecheck",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --typecheck",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch",
    "typecheck:examples": "tsc -p ./examples/tsconfig.json",
    "typecheck:examples:watch": "tsc -p ./examples/tsconfig.json --watch"
  },
  "browserslist": "extends @sanity/browserslist-config",
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@sanity/client": "^6.22.2",
    "@sanity/pkg-utils": "^6.11.4",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vitest/ui": "^2.1.3",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vitest": "^2.1.3"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
