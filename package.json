{
  "name": "sanitype",
  "version": "0.0.0",
  "description": "Experimental TypeScript-first schemas for Sanity",
  "keywords": [],
  "license": "MIT",
  "author": "Bjørge Næss <bjoerge@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "run-s clean pkg:build pkg:check",
    "clean": "rimraf dist",
    "format": "prettier --write --cache --ignore-unknown .",
    "pkg:build": "pkg build --strict",
    "pkg:check": "pkg check --strict",
    "pkg:watch": "pkg watch --strict",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext .cjs,.js,.ts,.tsx --quiet",
    "test": "vitest run",
    "typecheck": "tsc",
    "test:types": "vitest typecheck --no-watch",
    "test:types:watch": "vitest typecheck",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "check": "npm-run-all --serial clean --parallel typecheck lint test test:types",
    "dev": "run-p pkg:watch test:watch test:types:watch"
  },
  "devDependencies": {
    "@sanity/pkg-utils": "^2.4.8",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitest/ui": "^0.34.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "prettier-plugin-packagejson": "^2.4.5",
    "rimraf": "^5.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3",
    "zod": "^3.22.2"
  },
  "engines": {
    "node": ">= 18"
  }
}
