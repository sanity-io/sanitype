{
  "name": "@sanity/sanitype",
  "version": "0.2.0",
  "description": "Experimental TypeScript-first schemas for Sanity",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/sanity-io/sanitype.git"
  },
  "license": "MIT",
  "author": "Bjørge Næss <bjoerge@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "run-s clean pkg:build pkg:check",
    "check": "npm-run-all --serial clean pkg:build --parallel typecheck typecheck:examples lint test pkg:check",
    "clean": "rimraf dist",
    "coverage": "vitest run --coverage",
    "dev": "run-p pkg:watch typecheck:watch typecheck:examples:watch test:watch",
    "example:studio": "(cd examples/studio && npm run dev)",
    "examples": "run-p example:*",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint . --ext .cjs,.js,.ts,.tsx --quiet",
    "pkg:build": "pkg build --strict",
    "pkg:check": "pkg check --strict",
    "pkg:watch": "pkg watch --strict",
    "prepublishOnly": "npm run build",
    "test": "vitest run --typecheck",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --typecheck",
    "typecheck": "tsc",
    "typecheck:examples": "tsc -b ./examples",
    "typecheck:examples:watch": "tsc -b ./examples --watch",
    "typecheck:watch": "tsc -b ./examples --watch",
    "vercel-build": "vite build --config examples/forms/vite.config.ts examples/forms"
  },
  "dependencies": {
    "date-fns": "^3.2.0"
  },
  "devDependencies": {
    "@bjoerge/mutiny": "^0.5.1",
    "@sanity/client": "^6.11.1",
    "@sanity/pkg-utils": "^3.3.8",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.0",
    "prettier-plugin-packagejson": "^2.4.9",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
