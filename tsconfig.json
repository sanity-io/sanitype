{
  "include": ["src/*/**.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUncheckedIndexedAccess": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2019"],
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true
  }
}
